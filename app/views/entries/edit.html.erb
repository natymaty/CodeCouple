<%= form_for @entry, url: entry_path, html: { multipart: true } do |form| %>
  <% if @entry.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@entry.errors.count, "error") %>
        Prohibited this article from being saved
      </h2>
      <ul>
        <% @entry.errors.full_messages.each do |msg| %>
          </li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p><%= form.label("title") %></p>
  <p><%= form.text_field("title") %></p>
  <p><%= form.label("contents") %></p>
  <p><%= form.text_area("contents") %></p>
  <p><%= form.label("author") %></p>
  <p><%= form.text_field("author") %></p>
  <p><%= form.label("picture") %></p>
  <p><%= form.file_field :avatar %></p>
  <p><%= form.label("youtube link") %></p>
  <p><%= form.text_field("youtube_url") %></p>
  <p><%= form.submit %></p>
<% end %>
<p><%= link_to("Back to this entry", entry_path(@entry)) %></p>
<p><%= link_to("Back to all entries", entries_path) %></p>
<p><%= link_to("Delete", entry_path(@entry), data: { confirm: 'Are you sure?' }, method: :delete) %></p>
